# ExESDB Cluster Configuration
# Shared secret for cluster security (development environment)
REG_GH_CLUSTER_SECRET=my_veryT0pS3cr3t_for_reg_greenh0use_multicast_gossip

# Cluster configuration variables
REG_GH_DEV_CLIQUE=reg_gh_dev_clique
REG_GH_PROD_CLIQUE=reg_gh_prod_clique

# Set the cluster cookie for development
REG_GH_CLIQUE=reg_greenhouse_clique

# Map environment variables directly for ExESDGater
EX_ESDB_COOKIE=reg_greenhouse_clique
EX_ESDB_CLUSTER_SECRET=my_veryT0pS3cr3t_for_reg_greenh0use_multicast_gossip

# Use RELEASE_COOKIE for Elixir releases (takes precedence over cookie files)
# This environment variable is the standard way to set cookies for Elixir releases
RELEASE_COOKIE=reg_greenhouse_clique

# Network configuration for gossip broadcast
GOSSIP_BROADCAST_ADDR=255.255.255.255
GOSSIP_PORT=45892
REG_GH_GOSSIP_MULTICAST_ADDR=255.255.255.255

# Docker network for cluster communication
DOCKER_NETWORK=ex-esdb-net
